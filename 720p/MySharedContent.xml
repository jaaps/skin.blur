<?xml version="1.0"?>
<window id="100">
	<defaultcontrol always="true">50</defaultcontrol>
	<allowoverlay>yes</allowoverlay>
	<controls>
		<include>Background</include>
		<include>Header</include>
		<include>HeaderVideos</include>
		<control type="list" id="50">
			<posx>30</posx>
			<posy>100</posy>
			<width>1200</width>
			<height>575</height>
			<onleft>9000</onleft>
			<onright>9000</onright>
			<onup>50</onup>
			<ondown>50</ondown>
			<viewtype label="List">List</viewtype>
			<scrolltime>200</scrolltime>
			<itemlayout height="50">
				<control type="label">
					<posy>0</posy>
					<posx>20</posx>
					<width>670</width>
					<height>50</height>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Title] on $INFO[ListItem.Property(serverName)] from $INFO[ListItem.Property(sourceTitle)]</label>
					<textcolor>WhiteTrans</textcolor>
					<scroll>false</scroll>
					<font>list1</font>
				</control>
			</itemlayout>
			<focusedlayout height="50">
				<control type="image">
					<posy>0</posy>
					<posx>0</posx>
					<width>1200</width>
					<height>50</height>
					<texture>button_secondary.png</texture>
					<animation effect="fade" start="0" end="100" time="200" tween="cubic" easing="inout" delay="10">Focus</animation>
					<animation effect="fade" start="100" end="0" time="200" tween="cubic" easing="inout" delay="10">UnFocus</animation>
				</control>
				<control type="label">
					<posy>0</posy>
					<posx>20</posx>
					<width>670</width>
					<height>50</height>
					<aligny>center</aligny>
					<label>$INFO[ListItem.Title] on $INFO[ListItem.Property(serverName)] from $INFO[ListItem.Property(sourceTitle)]</label>
					<textcolor>White</textcolor>
					<scroll>false</scroll>
					<font>list1</font>
				</control>
			</focusedlayout>
		</control>
	</controls>
</window>
